{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/domain/_type-declarations",
      "./src/global.d.ts"
    ]
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.js",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ]
}
